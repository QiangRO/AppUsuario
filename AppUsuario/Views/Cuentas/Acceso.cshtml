@model AccesoVM
@{
    ViewData["Tittle"] = "Registro de usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h3 class="class-title text-center">Acceso de usuario</h3>
        <form asp-controller="Cuentas" asp-action="Acceso" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row mt-4">
                <!-- PRIMERA COLUMNA-->
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa tu contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="custom-check">
                            <label asp-for="RememberMe" class="col-md-3">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m=>m.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>
                <!-- SEGUNDA COLUMNA-->
                <div class="col-sm-4 offset-2">
                    <h3>Pendiente acceso aplicaciones externas</h3>
                </div>
            </div>
            <!-- BOTON-->
            <div class="row">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-success w-100 btn-lg">Acceder<i class="bi bi-arrow-right-circle-fill"></i></button>
                    <p><a asp-action="Registro">Registrarse como nuevo usuario</a></p>
                    <p><a asp-action="OlvidoPassword">Olvidaste tu contraseña</a></p>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

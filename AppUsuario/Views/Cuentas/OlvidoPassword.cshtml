@model AccesoVM
@{
    ViewData["Tittle"] = "Olvido su contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h3 class="class-title text-center">Olvido su contraseña</h3>
        <form asp-controller="Cuentas" asp-action="OlvidoPassword" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row mt-4">
                <!-- PRIMERA COLUMNA-->
                <div class="col-sm-6 offset-3">
                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success w-100 btn-lg">Recuperar su contraseña<i class="bi bi-arrow-right-circle-fill"></i></button>
                </div>
            </div>
            <!-- BOTON-->
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
